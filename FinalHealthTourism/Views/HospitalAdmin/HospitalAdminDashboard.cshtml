@model List<FinalHealthTourism.Models.Doctor>

@{
                /**/

                ViewBag.Title = "DisplayPatients";
                Layout = "~/Views/Shared/_LogoutLayout.cshtml";
}

<h2>Welcome @TempData["currentHospitalAdmin"]</h2>
<h2>All Doctors</h2>


<table id="mytable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Doctor Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Speciality</th>
            <th>Contact Number</th>
            <th>Email Id</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Id</td>
                <td>@d.FirstName</td>
                <td>@d.LastName</td>
                <td>@d.Gender</td>
                <td>@d.Speciality</td>
                <td>@d.ContactNumber</td>
                <td>@d.Email</td>
                <td>
                    @Html.ActionLink("Update Schedule","UpdateSchedule","HospitalAdmin",new{id=d.Id},new{@class="btn btn-primary"})
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#mytable").DataTable();

            $("#mytable").on("click",
                ".js-delete",
                function() {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete the record?",
                        function(result) {
                            if (result) {

                                $.ajax({
                                    url: "/Patient/Delete/" + button.attr("data-patient-id"),
                                    method: "POST",
                                    success: function() {
                                        button.parents("tr").remove();
                                    }

                                });
                            }
                        })
                })
        });
    </script>
}
